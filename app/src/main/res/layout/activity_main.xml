<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/demo2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/dp_20"
    android:layout_marginEnd="@dimen/dp_20"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.github.easyview.EasyButton
                android:id="@+id/bt_demo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:padding="@dimen/dp_10"
                android:background="@color/demo6"
                app:ev_radius="@dimen/dp_10"
                android:gravity="center"
                android:text="Demo"/>
            <com.github.easyview.EasyButton
                android:id="@+id/bt_round_corner"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:layout_marginStart="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:background="@color/demo6"
                app:ev_radius="@dimen/dp_10"
                android:gravity="center"
                android:text="RoundCorner"/>
            <com.github.easyview.EasyButton
                android:id="@+id/bt_text_view_group"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:padding="@dimen/dp_10"
                android:background="@color/demo6"
                android:layout_marginStart="@dimen/dp_10"
                app:ev_radius="@dimen/dp_10"
                android:gravity="center"
                android:text="EasyTextViewGroup"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_20">
            <com.github.easyview.EasyButton
                android:id="@+id/bt_easyTickMarkProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:padding="@dimen/dp_10"
                android:background="@color/demo6"
                app:ev_radius="@dimen/dp_10"
                android:gravity="center"
                android:text="EasyTickMarkProgressBar"/>
            <com.github.easyview.EasyButton
                android:id="@+id/bt_easyIndicatorProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:layout_marginStart="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:background="@color/demo6"
                app:ev_radius="@dimen/dp_10"
                android:gravity="center"
                android:text="EasyIndicatorProgressBar"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
